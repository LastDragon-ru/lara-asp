{
  "name": "lastdragon-ru/lara-asp-formatter",
  "homepage": "https://github.com/LastDragon-ru/php-packages",
  "description": "Provides a customizable wrapper around Intl formatters to use it inside Laravel application. And also allows defining your own formats.",
  "readme": "README.md",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "formatter",
    "laravel-package",
    "laravel",
    "intl",
    "php"
  ],
  "support": {
    "issues": "https://github.com/LastDragon-ru/php-packages/issues",
    "source": "https://github.com/LastDragon-ru/php-packages",
    "forum": "https://github.com/LastDragon-ru/php-packages/discussions"
  },
  "require": {
    "php": "^8.3|^8.4",
    "ext-bcmath": "*",
    "ext-intl": "*",
    "ext-mbstring": "*",
    "illuminate/macroable": "^12.0.1",
    "illuminate/support": "^12.0.1",
    "lastdragon-ru/lara-asp-core": "self.version",
    "symfony/polyfill-php84": "^1.31"
  },
  "require-dev": {
    "illuminate/contracts": "^12.0.1",
    "lastdragon-ru/lara-asp-testing": "self.version",
    "lastdragon-ru/phpunit-extensions": "self.version",
    "orchestra/testbench": "^10.0.0",
    "phpunit/phpunit": "^11.3.0|^12.0.0"
  },
  "autoload": {
    "psr-4": {
      "LastDragon_ru\\LaraASP\\Formatter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LastDragon_ru\\LaraASP\\Formatter\\Docs\\": "docs"
    },
    "exclude-from-classmap": [
      "docs/"
    ]
  },
  "conflict": {
    "thecodingmachine/safe": "<3.0.0"
  },
  "extra": {
    "laravel": {
      "providers": [
        "LastDragon_ru\\LaraASP\\Formatter\\PackageProvider"
      ]
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
