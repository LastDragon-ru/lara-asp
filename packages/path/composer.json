{
  "name": "lastdragon-ru/path",
  "homepage": "https://github.com/LastDragon-ru/lara-asp",
  "description": "Provides utilities for working with file and directory paths in an object-oriented way.",
  "readme": "README.md",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "path",
    "php",
    "file",
    "directory"
  ],
  "support": {
    "issues": "https://github.com/LastDragon-ru/lara-asp/issues",
    "source": "https://github.com/LastDragon-ru/lara-asp",
    "forum": "https://github.com/LastDragon-ru/lara-asp/discussions"
  },
  "require": {
    "php": "^8.3|^8.4",
    "ext-mbstring": "*",
    "symfony/polyfill-php85": "^1.33"
  },
  "require-dev": {
    "lastdragon-ru/lara-asp-testing": "self.version",
    "mockery/mockery": "^1.6.6",
    "phpunit/phpunit": "^11.2.0|^12.0.0"
  },
  "autoload": {
    "psr-4": {
      "LastDragon_ru\\Path\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LastDragon_ru\\Path\\Docs\\": "docs"
    },
    "exclude-from-classmap": [
      "docs/"
    ]
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
